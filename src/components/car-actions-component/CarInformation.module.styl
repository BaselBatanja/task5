.button
    background-color white
    border 2px solid black
    color black
    padding 0.6rem 2rem
    font-size 16px
    &:hover
        background-color black
        color white
        cursor pointer

.header
    display flex
    justify-content space-between
    align-items center
    .title
        font-size 15px
        font-family sans-serif
    .actions
        display flex
        gap 10px
.details
    border-radius 5px
    position relative
    font-family sans-serif
    box-shadow 1px 2px 8px rgba(0,0,0,0.7)
    max-height 30%
    flex 1
    overflow hidden
    .titleSpan
        font-size 18px
        font-weight bold
        background-color red
        color white
        padding 20px
    .text
        padding 20px
.centered
    display flex
    justify-content center
    align-items center
    height 100%
.photoContainer
    height 40%
    display flex
    justify-content center
.notFoundedCar
    font-family sans-serif
    font-size 30px
    font-weight bold
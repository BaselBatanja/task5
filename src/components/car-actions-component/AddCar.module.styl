.form
    display flex
    flex-direction column
    justify-content space-between
    box-sizing border-box
    padding 0px 20px 20px 20px
    height 100%

.addCar
    position fixed
    top 50%
    left 50%
    transform translate(-50%,-50%)
    width 35rem
    height 38rem
    background-color white
    z-index 1000
    border-radius 10px
    font-family 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif
  
    label
        padding-bottom 5px
    .heading
        text-align center
    .name,
    .costPerDay,
    .imageUploading,
    .details
        display flex
        flex-direction column
        width 60%
    .name,
    .costPerDay
        input
            padding 12px
            outline none
            font-size 15px
            border 1px solid rgb(163, 160, 160) 
    .imageUploading
        .imageButton
            background-color white
            border 1px solid rgb(163, 160, 160)
            cursor pointer
            display flex
            justify-content space-between
            padding 5px
            align-items center
            font-size 12px
            padding-left 15px
            .pickerImageImage
                max-width 25px
    .details
        width 100%
        height 14rem
        box-sizing border-box
        .textA
            width 60%
            max-width 100%
            min-width 60%
            max-height 70%
            min-height 70%
            padding 10px
            font-size 15px
            font-family sans-serif
            outline none
            box-sizing border-box
            border 1px solid rgb(163, 160, 160) 
    .actions
        display flex
        flex-direction row-reverse
        gap 10px
        .add,
        .cancel
            background-color black
            color white
            padding 1rem 2rem
            border none
            font-size 18px
            &:hover
                cursor pointer
        .cancel
            background-color white
            color black
            border 1px solid black
            
            &:hover
                background-color black
                color white

    

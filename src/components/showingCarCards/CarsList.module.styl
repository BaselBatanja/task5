@keyframes anima {
    0%{
        opacity 0
        left 50px

    }
    100%{
        opacity 1
        left 0px
    }
}
.list
    width 100%
    height 100%
    display grid
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr))
    grid-template-rows repeat(auto-fit, 250px)
    grid-auto-rows: 250px
    overflow auto
    gap 5px
    animation anima 1s ease 
    padding 5px
    position relative
    
.notFound
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    font-family sans-serif
    font-size 30px
    font-weight bold
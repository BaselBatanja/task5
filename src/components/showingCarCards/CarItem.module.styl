@keyframes transitionBox {
    0%{
        opacity 0
    }
    100% {
        opacity 1
    }
}
@keyframes aniima {
    0%{
        width 160%
    }
    100% {
        width 170%
    }
}
.eventItem
    cursor pointer
    display flex
    align-items center
    border 1px solid #ccc
    color white
    border-radius 12px
    height 100%
    flex-direction column
    font-family sans-serif
    animation transitionBox 0.5s ease
    position relative
    overflow hidden
    &:hover > .nameDiv
        flex-basis 50%
        transition 0.5s
        box-shadow 1px 2px 8px rgba(0,0,0,0.0)
        
    &:hover > .nameDiv > img
        animation aniima 0.3s ease
        width 170%

    &:hover > .dateDiv
        flex-basis 50%
        transition 0.5s
        
    .nameDiv
        width 100%
        text-align center
        overflow hidden
        white-space nowrap;
        text-overflow ellipsis;
        background-color: white
        flex-basis 78%
        position relative
        transition 0.5s
        box-shadow 1px 2px 8px rgba(0,0,0,0.5)

        img
            width 160%
            position absolute
            left 50%
            top 50%
            transform translate(-50%,-50%)
            object-fit: cover;
            transition 0.5s

    .dateDiv
        max-width 100%
        text-align center
        font-size 20px
        display flex
        flex-basis 22%
        justify-content space-between
        background-color: #FF0000
        color white
        flex-direction column
        padding 10px
        overflow hidden
        transition 0.5s
        width 100%
        .description
            font-size 12px
            overflow hidden

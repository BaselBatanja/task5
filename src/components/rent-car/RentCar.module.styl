
.rentCar
    position fixed
    top 50%
    left 50%
    transform translate(-50%,-50%)
    width 35rem
    height 20rem
    background-color white
    z-index 1000
    border-radius 10px
    font-family 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif
    .form
        display flex
        flex-direction column
        justify-content space-between
        box-sizing border-box
        flex-direction column
        width 100%
        padding 0px 20px 20px 20px

        height 100%
    .firstDiv
        display flex
        justify-content space-between
        div
            display flex
            flex-direction column
    .lastDiv
        display flex
        flex-direction column
        width fit-content
    input
        width 15rem
        height 2rem
        text-align center
        font-size 16px
    label
        padding-bottom 5px
    .heading
        text-align center
    .actions
        display flex
        flex-direction row-reverse
        gap 10px
        .add,
        .cancel
            background-color black
            color white
            padding 1rem 2rem
            border none
            font-size 18px
            &:hover
                cursor pointer
        .cancel
            background-color white
            color black
            border 1px solid black
            
            &:hover
                background-color black
                color white
        .errorMessage
            align-self center
            color red
            animation: animate 100ms ease
            position relative
            right 30px
            width 45%

    
@keyframes animate {
    0% {
        right 30px
    }
    25% {
        right 40px    
    }
    50% {
        right 30px    
    }
    75% {
        right 20px    
    }
    100% {
        right 30px
    }
    
}
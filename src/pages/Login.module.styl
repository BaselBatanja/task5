.containerOfBackdrop
    overflow hidden
    max-width 100%
    max-height 100vh
    .backdrop
        transform scale(2)
        .groupOfPhotos
            width 100%
            height 100vh
            color : black
            background-image url('https://firebasestorage.googleapis.com/v0/b/task5-44bd5.appspot.com/o/carcar-removebg-preview.webp?alt=media&token=7fd521f7-9b2b-4241-a3a2-a12b3c92551f')
            background-repeat repeat
            background-size 150px
            background-color black
            transform rotate(15deg) 
            filter: blur(0.07rem) saturate(120%);
            


.login
    background: white
    position fixed
    top 50%
    left 50%
    width: 30%
    height: 70%
    transform translate(-50%,-50%)
    border-radius 12px
    display flex
    flex-direction column
    justify-content space-around
    font-family 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif
    .header
        text-align center
        font-size 30px
        font-weight bold
    .inputs
        padding: 20px
        display flex
        flex-direction column
        gap 20px
        div
            label
                text-align center
                padding-bottom 10px
                font-weight bold
        div
            input
                padding: 15px
                border-radius 5px
                border 1px solid rgb(149, 147, 147)
                outline none
                font-size 17px
                font-family 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif


        .username
            display flex
            flex-direction column
        .password
            display flex
            flex-direction column
    .footer
        padding 20px
        display flex
        justify-content center
        button
            width 100%
            height 3rem
            border-radius 5px
            border none
            font-family 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif
            font-size 20px
            background-color black
            color white
            cursor pointer
            &:hover
                background-color red
                transition 0.5s
